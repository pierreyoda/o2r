<!-- Example tower provided with O2R 0.6 -->
<?xml version="1.0" encoding="UTF-8"?>
<Tower basedir="data/towertest">
	<floor ref="testtower1.txt"/> <!-- 'name="..."' can be used to redefine a personal name 
		(warning : this name will be used for stairs). -->
	<floor ref="testtower2.txt"/>
	<floor ref="testtower3.txt"/>
	<!-- Level Extension System custom cases - can be in another file by linking with : <LES ref="..."/> -->
	<LES basedir="data/towertest">
		<!-- 'fromBaseDir' = searchs image in base module dir (data/base/)
		If not enabled images paths will be from tower dir -->
		<element char="U" img="stairsup.png" type="STAIRS" fromBaseDir="1"/>
		<element char="D" img="stairsdown.png" type="STAIRS" fromBaseDir="1"/>
		<element char="1" img="wall.png" type="BLOCK" fromBaseDir="1"/>
		<element char="2" img="block.png" type="WALL" fromBaseDir="1"/>
	</LES>
	<!-- Stairs description - as LES, 'ref="..."' can be used too -->
	<stairs> <!-- 'persoflag="X" can be used to redefine a personal flag (which separes level name and stair char -->
		<staircase from="00:U" to="01:D" bothdir="1"/>
		<staircase from="01:U" to="02:D" bothdir="1"/>
		<!-- 'final=1' means that this is the final stairs (therefore 'to=...' is useless).
NB : for booleans arguments, 'true' '1' / 'false' '0' are accepted. Any other string will be converted as false. -->
		<staircase from="02-u" final="true" message="Congratulations!
You have sucessfully completed this example tower!"/> <!-- Watch out for line breaks! -->
	</stairs>
</Tower>